@model IEnumerable<MVC_Blog_Uygulama.Models.KategoriModel>

@{
    ViewBag.Title = "Index";
}

<h2>Kategori Listesi</h2>
<hr />
<p>
    @Html.ActionLink("Yeni Kategori Ekle", "Create", null, new {@class="btn btn-warning" })
</p>
<hr />
@*kaydedilen datayı öne çıkarmak için yapıldı*@
@if (TempData["Kategori"] != null) 
{
    var kategori = (MVC_Blog_Uygulama.Models.Kategori)TempData["Kategori"];

    <div class="alert alert-success" role="alert">
        <strong><span class="glyphicon glyphicon-ok"></span> @kategori.KategoriAdi</strong> Kayıt Edildi.
    </div>
}

<table class="table table-bordered table-hover table-striped" >
    <tr>        
        <th style="width:60%">
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.BlogSayisi)
        </th>

        <th style="width:30%"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KategoriAdi)
        </td>

        <td>
            @item.BlogSayisi
        </td>

        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id = item.id}, new {@class="btn btn-primary btn-xs" }) 
            @Html.ActionLink("Detay", "Details", new { id = item.id }, new { @class = "btn btn-success btn-xs" }) 
            @Html.ActionLink("Sil", "Delete", new { id = item.id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
